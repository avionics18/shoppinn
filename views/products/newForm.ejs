<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<div class="container py-5">
	<div class="row">
		<div class="col-lg-8 offset-lg-2">
			<h3 class="font-weight-bold text-uppercase">Add New Product</h3>
			<hr>
			<form class="needs-validation" action="/products" method="POST" novalidate>
				<div class="form-group">
					<label for="title" class="small text-primary font-weight-bold">Title</label>
					<input type="text" name="product[title]" id="title" class="form-control" placeholder="Enter the title" required>
					<div class="valid-feedback">Looks Good!</div>
					<div class="invalid-feedback">This is a mandatory field, you can't leave this empty!</div>
				</div>
				<div class="form-group">
					<label for="img" class="small text-primary font-weight-bold">Image URL</label>
					<input type="text" name="product[img]" id="img" class="form-control" placeholder="Paste the image url" required>
					<div class="valid-feedback">Looks Good!</div>
					<div class="invalid-feedback">This is a mandatory field, you can't leave this empty!</div>
				</div>
				<div class="form-group">
					<label for="price" class="small text-primary font-weight-bold">Price</label>
					<input type="number" name="product[price]" id="price" class="form-control" placeholder="Enter the price" required>
					<div class="valid-feedback">Looks Good!</div>
					<div class="invalid-feedback">This is a mandatory field, you can't leave this empty!</div>
				</div>
				<div class="form-group">
					<label for="desc" class="small text-primary font-weight-bold">Description</label>
					<textarea name="product[desc]" id="desc" class="form-control" rows="8" placeholder="Enter the product's description" required></textarea>
					<div class="valid-feedback">Looks Good!</div>
					<div class="invalid-feedback">This is a mandatory field, you can't leave this empty!</div>
				</div>
				<div class="text-center mt-4">
					<button class="btn btn-primary btn-lg" type="submit">Submit<i class="fas fa-paper-plane ml-2"></i></button>
					<a href="/products" class="btn btn-secondary btn-lg" type="submit">Cancel<i class="fas fa-times ml-2"></i></a>
				</div>
			</form>
		</div>
	</div>
</div>


<script src="/js/form-validation.js"></script>

<%- include("../partials/footer") %>