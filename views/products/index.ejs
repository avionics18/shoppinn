<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<div class="container py-5">
	<div class="row">
		<div class="col-lg-12">
			<%- include("../partials/flash") %>
			<div class="d-flex justify-content-between align-items-center">
				<h5 class="m-0 text-secondary"><b>All Products</b></h5>
				<% if (currentUser) { %>
				<a href="/products/new" class="btn btn-outline-primary btn-sm">
					Add Product<i class="fas fa-plus-square ml-2"></i>
				</a>
				<% } %>
			</div>
			<hr>
		</div>
		<%for(let item of products){%>
		<div class="col-lg-3 mb-4">
			<div class="card h-100 border-0 shadow rounded-lg">
				<% if(item.img.substr(0, 4) == "http") { %> 
					<img src="<%= item.img %>" alt="<%= item.title %>" class="card-img object-fit-cover object-pos-center shadow rounded-lg" height="200">
				<% } else { %> 
					<img src="/images/products/<%= item.img %>" alt="<%= item.title %>" class="card-img object-fit-cover object-pos-center shadow rounded-lg" height="200">
				<% } %>
				<div class="card-body">
					<h5><%= item.title %></h5>
					<p class="card-text text-secondary small"><%= item.desc.substring(0,90) %> ...</p>
				</div>
				<div class="card-footer d-flex justify-content-around align-items-center">
					<p class="m-0 text-danger font-weight-bold"><i class="fas fa-rupee-sign mr-2"></i><%= item.price.toLocaleString() %></p>
					<p class="m-0"><a href="/products/<%= item._id %>" class="btn btn-dark btn-sm">View<i class="fas fa-chevron-right ml-2"></i></a></p>
				</div>
			</div>
		</div>
		<%}%>
	</div>
</div>

<%- include("../partials/footer") %>